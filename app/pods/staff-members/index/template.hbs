<div class="row">
  <div class="col-md-10">
    <h3 class="no-margin-top">Staff Members</h3>
  </div>
  <div class="col-md-2">
    {{link-to 'New Staff Member' 'staff-members.new' class='btn btn-success btn-block'}}
  </div>
</div>

<hr />

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |staffMember|}}
      <tr>
        <td>{{staffMember.id}}</td>
        <td>{{link-to staffMember.fullNameTitle 'staff-members.show' staffMember}}</td>
        <td>
          {{link-to 'Edit' 'staff-members.edit' staffMember class='btn btn-warning'}}
          <button class='btn btn-danger destroy' {{action 'destroyWithPrompt' staffMember "fullName"}}>Delete</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
