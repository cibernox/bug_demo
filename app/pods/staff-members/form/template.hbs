<form {{action 'saveRecord' model on='submit'}}>
  <div class="form-group">
    <label>Title</label>
    {{input value=model.title class='form-control title' required='required'}}
  </div>
  <div class="form-group">
    <label>Forename</label>
    {{input value=model.forename class='form-control forename' required='required'}}
  </div>
  <div class="form-group">
    <label>Surname</label>
    {{input value=model.surname class='form-control surname' required='required'}}
  </div>
  <div class="form-group">
    {{input type="submit" value="Save" class='btn btn-success'}}
  </div>
</form>
